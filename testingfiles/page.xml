<?xml version="1.0" encoding="utf-8" ?>

<component name="HelpPage" extends="Group">
    <interface>
        <field id="staticText" type="assocArray" />
        <field id="title" type="string" alias="title.text" />
        <field id="keyPress" type="assocArray" />
        <field id="width" type="float" value="1280" />
        <field id="content" type="assocArray" />
        <field id="generate" type="boolean" onChange="generate" />
        <field id="itemFocused" type="int" alias="questionList.itemFocused" onChange="itemFocused" />
        <field id="generateComplete" type="boolean" value="false" />
        <field id="setFocus" type="boolean" alwaysNotify="true" onChange="onSetFocus" />
    </interface>

    <children>
        <Rectangle
            id="background"
            width="1280"
            height="720" />
        <Label
            id="title"
            translation="[96, 52]">
                <Font role="font" uri="pkg:/fonts/regular.ttf" size="24" />
        </Label>
        <Label
            id="pagination"
            horizAlign="right"
            width="200"
            translation="[400, 52]">
                <Font role="font" uri="pkg:/fonts/regular.ttf" size="24" />
        </Label>
        <MarkupList
            id="questionList"
            itemComponentName="DimmableLabelItem"
            itemSize="[520, 60]"
            itemSpacing="[0, 10]"
            translation="[77, 106]"
            numRows="7"
            vertFocusAnimationStyle="fixedFocusWrap" />

        <AtlasScrollableText
            id="description"
            translation="[645, 106]"
            width="550"
            height="520"
            lineSpacing="0.0">
            <Font role="font" uri="pkg:/fonts/regular.ttf" size="21" />
        </AtlasScrollableText>

        <Poster
            uri="pkg:/images/fade/help_fade.png"
            width="635"
            height="198"
            translation="[0, 522]" />

        <Label
            id="strapline"
            width="1280"
            horizAlign="center"
            translation="[0, 645]">
                <Font role="font" uri="pkg:/fonts/regular.ttf" size="21" />
        </Label>

    </children>

    <!-- SCRIPT-INCLUDE uri="/views/" -->
    <!-- SCRIPT-INCLUDE uri="/old/" -->
    <!-- SCRIPT-INCLUDE uri="/old2/" -->

    <script type="text/brightscript" uri="pkg:/components/HelpPage.brs" />
    <script type="text/brightscript" uri="pkg:/components/bs-utils/ViewUtils.brs" />
    <script type="text/brightscript" uri="pkg:/components/StyleConstants.brs" />
</component>
